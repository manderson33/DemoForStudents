<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="quizApp.QuizController"
            prefWidth="800" prefHeight="600"
            stylesheets="@quiz-style.css"
            style="-fx-font-family: 'Segoe UI'; -fx-padding: 20;">

    <!-- ===== TOP: Quiz Header and Timer ===== -->
    <top>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Quiz Application" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="Time Left:" style="-fx-font-size: 16px;"/>
            <Label fx:id="timerLabel" text="00:00" style="-fx-font-size: 16px; -fx-text-fill: #D72638;"/>
        </HBox>
    </top>

    <!-- ===== CENTER: Question and Options ===== -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <Label fx:id="questionLabel"
                   wrapText="true"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-alignment: center;"
                   text="Load a CSV to Start the Quiz"/>

            <VBox spacing="10" alignment="CENTER" prefWidth="400">
                <Button fx:id="optionAButton" text="Option A" onAction="#handleAnswerSelected" prefWidth="400"/>
                <Button fx:id="optionBButton" text="Option B" onAction="#handleAnswerSelected" prefWidth="400"/>
                <Button fx:id="optionCButton" text="Option C" onAction="#handleAnswerSelected" prefWidth="400"/>
                <Button fx:id="optionDButton" text="Option D" onAction="#handleAnswerSelected" prefWidth="400"/>
            </VBox>
        </VBox>
    </center>

    <!-- ===== BOTTOM: Controls and Score ===== -->
    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="loadButton" text="Load CSV" onAction="#handleLoadCSV" />
            <Button fx:id="startButton" text="Start Quiz" onAction="#handleStartQuiz" disable="true"/>
            <Button fx:id="nextButton" text="Next Question" onAction="#handleNextQuestion" disable="true"/>

            <Pane HBox.hgrow="ALWAYS" />

            <Label text="Score:" style="-fx-font-size: 16px;"/>
            <Label fx:id="scoreLabel" text="0" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </bottom>
</BorderPane>
