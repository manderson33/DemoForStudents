<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="csvApp.MainController">
    <top>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button fx:id="loadButton" text="Load CSV" onAction="#handleLoad"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tableView">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="120"/>
                <TableColumn fx:id="mathColumn" text="Math" prefWidth="90"/>
                <TableColumn fx:id="scienceColumn" text="Science" prefWidth="90"/>
                <TableColumn fx:id="englishColumn" text="English" prefWidth="90"/>
                <TableColumn fx:id="historyColumn" text="History" prefWidth="90"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
